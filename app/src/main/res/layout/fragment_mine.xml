<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <TextView
      android:id="@+id/tv_mine"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="活泼开朗"
      android:textSize="20sp"
      android:gravity="center"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/sw_mine"
      app:layout_constraintHorizontal_chainStyle="packed"

  />
  <Switch
      android:id="@+id/sw_mine"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:switchMinWidth="20dp"
      android:layout_marginLeft="10dp"
      android:thumb="@drawable/thumb"
      android:track="@drawable/track"
      android:gravity="center"
      app:layout_constraintLeft_toRightOf="@id/tv_mine"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
  />
  <EditText
      android:id="@+id/et_text"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:hint="utf-8"/>
  <Button
      android:id="@+id/btn_text"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/et_text"
      android:text="转换"/>
  <TextView
      android:id="@+id/tv_text"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      app:layout_constraintLeft_toRightOf="@id/btn_text" android:text="gbk"
      android:textSize="16sp"/>

  <Button
      android:id="@+id/btn_jump"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="跳转"
      app:layout_constraintTop_toBottomOf="@id/sw_mine"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
  />
  <Button
      android:id="@+id/btn_dialog"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="弹窗"
      app:layout_constraintTop_toBottomOf="@id/btn_jump"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
  />

</android.support.constraint.ConstraintLayout>